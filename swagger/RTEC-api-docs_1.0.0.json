{
  "swagger": "2.0",
  "info": {
    "description": "Prescription Exemption Checking API",
    "version": "1.0.0",
    "title": "Prescription Exemption Checking API",
    "x-logo": {
      "url": "images/logo.png",
      "backgroundColor": "#FFFFFF"
    }
  },
  "securityDefinitions":{
    "Bearer":{
      "description":"Audit and provenance details must be provided in the HTTP authorisation header as an OAuth Bearer Token. This must include the claims defined in <a href='integration_cross_organisation_audit_and_provenance.html'>Cross organisation audit and provenance transport</a>",
      "type": "apiKey",
      "name": "Authorization",
      "in":"header"
    }
  },
  "host": "dev.assured.nhsbsa.nhs.uk",
  "basePath": "/rtec-api-gateway/v1.0.0",
  "tags": [{
    "name": "Exemptions",
    "description": "Prescription Exemptions"
  }],
  "schemes": ["https"],
  "paths": {
    "/search": {
      "post": {
        "tags": ["Exemptions"],
        "security":[{"Bearer":[]}],
        "summary": "Search for exemption certificates based on NHS Number, Surname, Date of Birth and Postcode",
        "operationId": "searchUsingPOST",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [{
          "in": "body",
          "name": "searchRequest",
          "description": "searchRequest",
          "required": true,
          "schema": {
            "$ref": "#/definitions/SearchRequest"
          }
        },
        {
          "in": "header",
          "name": "Ssp-From",
          "description": "Dispensing System's ASID",
          "required": false,
          "schema": {
            "type": "string",
            "example":"226732150041"
          }
        },
        ],
        "responses": {
          "200": {
            "description": "Exemption has been found",
            "schema": {
              "$ref": "#/definitions/SearchResponse"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/SearchResponse"
            }
          },
          "404": {
            "description": "Exemption has not been found",
            "schema": {
              "$ref": "#/definitions/SearchResponse"
            }
          },
          "500": {
            "description": "Unexpected error happened"
          },
          "501": {
            "description": "Not implemented"
          },
          "503": {
            "description": "Service unavailable"
          }
        }
      }
    }
  },
  "definitions": {
    "SearchRequest": {
      "type": "object",
      "required": ["prescriptionId","dob", "nhsNumber", "postcode", "surname"],
      "properties": {
        "prescriptionId": {
          "type": "string",
          "example": "471BC8-P83027-34B75X",
          "description": "EPS R2 prescription ID"
        },
        "dob": {
          "type": "string",
          "format": "date",
          "example": "1993-06-22",
          "description": "Date of Birth"
        },
        "nhsNumber": {
          "type": "string",
          "example": "9434765919",
          "description": "NHS Number"
        },
        "postcode": {
          "type": "string",
          "example": "NE32JH",
          "description": "Postcode"
        },
        "surname": {
          "type": "string",
          "example": "Johnson",
          "description": "Surname / Family Name"
        }
      }
    },
    "SearchResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Exemption has been found",
          "description": "Message"
        },
        "type": {
          "type": "string",
          "example": "9005",
          "description": "Exemption type"
        }
      }
    }
  }
}
